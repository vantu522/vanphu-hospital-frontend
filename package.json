{
  "name": "frontend_hospital",
    "productName": "GoBook",
  "description": "Ứng dụng desktop cho bệnh viện Van Phu (React + Electron).",
  "author": "GoBook",  
  "private": true,
  "version": "0.0.0",
  "type": "module",
    "main": "electron/main.cjs",
  "scripts": {
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "npm run build && electron-forge make",
     "preview:electron": "cross-env NODE_ENV=production electron .",
    "dev:react": "cross-env BROWSER=none vite",
    "dev:electron": "cross-env VITE_DEV_SERVER=http://localhost:5173 wait-on http://localhost:5173 && electron .",
    "dev": "concurrently -k \"npm:dev:react\" \"npm:dev:electron\""
  },

  "dependencies": {
    "@tailwindcss/vite": "^4.1.3",
    "@tinymce/tinymce-react": "^6.3.0",
    "@zxing/browser": "^0.1.5",
    "@zxing/library": "^0.21.3",
    "antd": "^5.26.7",
    "axios": "^1.8.4",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "electron-squirrel-startup": "^1.0.1",
    "lucide-react": "^0.514.0",
    "qrcode.react": "^4.2.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-helmet": "^6.1.0",
    "react-hot-toast": "^2.5.2",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.5.0",
    "react-toastify": "^11.0.5",
    "recharts": "^3.1.0",
    "tailwindcss": "^4.1.3",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.3",
    "@electron-forge/maker-deb": "^7.8.3",
    "@electron-forge/maker-rpm": "^7.8.3",
    "@electron-forge/maker-squirrel": "^7.8.3",
    "@electron-forge/maker-zip": "^7.8.3",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.3",
    "@electron-forge/plugin-fuses": "^7.8.3",
    "@electron/fuses": "^1.8.0",
    "@eslint/js": "^9.21.0",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "electron": "^37.3.0",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
